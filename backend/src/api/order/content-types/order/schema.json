{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Order": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "preparation_status": {
      "type": "enumeration",
      "enum": [
        "Request",
        "Accepted",
        "Cooking",
        "Done",
        "Served"
      ],
      "default": "Request"
    },
    "paid": {
      "type": "boolean"
    },
    "payment_method": {
      "type": "enumeration",
      "enum": [
        "Momo",
        "Cash"
      ]
    },
    "service_type": {
      "type": "enumeration",
      "enum": [
        "Eat In",
        "Take Out"
      ]
    },
    "order_items": {
      "type": "component",
      "repeatable": true,
      "component": "order-item.order-item"
    },
    "total_price": {
      "type": "decimal"
    }
  }
}
